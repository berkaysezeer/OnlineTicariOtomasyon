@using OnlineTicariOtomasyon.ViewModels
@model IEnumerable<OzetTabloViewModel>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Müşteri Şehir Tablosu (partial)</h3>
    </div>
    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Şehir</th>
                    <th>Progress</th>
                    <th style="width: 40px">Oran</th>
                </tr>
            </thead>
            <tbody>

                @{int sayac = 1;}
                @foreach (var i in Model)
                {
                    int sonuc = Convert.ToInt32((((decimal)i.Adet / (decimal)ViewBag.Toplam) * 100));

                    <tr>
                        <td>@sayac</td>
                        <td>@i.Sehir</td>
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-@(sonuc <= 25 ? "danger" : sonuc > 25 && sonuc <= 50 ? "primary" : "success" )" style="width: @sonuc%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-@(sonuc <= 25 ? "danger" : sonuc > 25 && sonuc <= 50 ? "primary" : "success" )">@sonuc%</span></td>
                        @{sayac++;}
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>