@using OnlineTicariOtomasyon.Models
@model List<SatisHareket>
@{
    ViewBag.Title = "Cari Satışları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">@ViewBag.CariBilgisi</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Cari/Index">Cariler</a></li>
        <li class="breadcrumb-item active">@ViewBag.CariBilgisi</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-table mr-1"></i>Satış Listesi</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Ürün</th>
                            <th>Personel</th>
                            <th>Tutar</th>
                            <th>Toplam Tutar</th>
                            <th>Adet</th>
                            <th>Tarih</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Ürün</th>
                            <th>Personel</th>
                            <th>Tutar</th>
                            <th>Toplam Tutar</th>
                            <th>Adet</th>
                            <th>Tarih</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var satis in Model)
                        {
                            <tr>
                                <td>@satis.Id</td>
                                <td>@satis.Urun.Ad</td>
                                <td>@(satis.Personel.Ad + " " + satis.Personel.Soyad)</td>
                                <td>₺@Convert.ToInt32(satis.Tutar)</td>
                                <td>₺@Convert.ToInt32(satis.ToplamTutar)</td>
                                <td>@satis.Adet</td>
                                <td>@satis.Tarih.ToString("dd.MM.yyyy")</td>
                            </tr>
}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @*<div class="form-group mt-4 mb-0"><a class="btn btn-primary" href="/Personel/Ekle/@Model.Id">Yeni Personel Ekle</a></div>*@
</div>