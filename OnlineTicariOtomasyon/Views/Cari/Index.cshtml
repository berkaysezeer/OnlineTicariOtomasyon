@using OnlineTicariOtomasyon.Models
@model List<Cari>
@{ ViewBag.Title = "Cariler"; }


<div class="container-fluid">
    <h1 class="mt-4">Cariler</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Cari/Index">Cari Listesi</a></li>
        <li class="breadcrumb-item active">Cariler</li>
    </ol>
    @if (TempData["CariSuccess"] != null)
    {
<div class="alert alert-success alert-dismissible fade show" role="alert">
    @TempData["CariSuccess"].ToString()
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>}
    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-table mr-1"></i>Cari Listesi</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Şehir</th>
                            <th>E-posta</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cari in Model)
                        {
            <tr>
                <td>@cari.Ad @cari.Soyad</td>
                <td>@cari.Sehir</td>
                <td>@cari.Eposta</td>
                <td>
                    <a href="/Cari/CariSatis/@cari.Id" class="btn btn-info">Satışlar</a>
                    <a href="/Cari/Duzenle/@cari.Id" class="btn btn-primary">Düzenle</a>
                    <a href="/Cari/Sil/@cari.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="form-group mt-4 mb-0"><a class="btn btn-primary" href="/Cari/Ekle">Yeni Cari Ekle</a></div>
</div>