@using OnlineTicariOtomasyon.Models
@model FaturaKalem
@{
    ViewBag.Title = "Fatura Kalemi Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">@ViewBag.FaturaId (@ViewBag.FaturaSiraNo) Numaralı Fatura</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Fatura/Index">Fatura</a></li>
        <li class="breadcrumb-item active">Fatura Kalemi Ekle</li>
    </ol>
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header"><i class="fas fa-table mr-1"></i>Kalem Bilgileri</div>
                <div class="card-body">

                    @using (Html.BeginForm("KalemEkle", "Fatura", FormMethod.Post))
                    {
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                @Html.LabelFor(x => x.Aciklama, "Açıklama", new { @class = "small mb-1" })
                                @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control py-3" })
                                @Html.ValidationMessageFor(x => x.Aciklama, "", new { @class = "small", @style = "color:red" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                @Html.LabelFor(x => x.BirimFiyat, "Birim Fiyatı", new { @class = "small mb-1" })
                                @Html.TextBoxFor(x => x.BirimFiyat, new { type = "number", min = "0", step = "1", @class = "form-control py-3" })
                                @Html.ValidationMessageFor(x => x.BirimFiyat, "", new { @class = "small", @style = "color:red" })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(x => x.Tutar, "Tutar", new { @class = "small mb-1" })
                                @Html.TextBoxFor(x => x.Tutar, new { type = "number", min = "0", step = "1", @class = "form-control py-3" })
                                @Html.ValidationMessageFor(x => x.Tutar, "", new { @class = "small", @style = "color:red" })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(x => x.Adet, "Adet", new { @class = "small mb-1" })
                                @Html.TextBoxFor(x => x.Adet, new { type = "number", min = "0", step = "1", @class = "form-control py-3" })
                                @Html.ValidationMessageFor(x => x.Adet, "", new { @class = "small", @style = "color:red" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-group mt-4 mb-0">
                                    <button class="btn btn-primary btn-block" type="submit">Ekle</button>
                                </div>
                            </div>
                        </div>}
                </div>
            </div>
        </div>
    </div>
</div>