@using OnlineTicariOtomasyon.Models
@model  List<Departman>
@{ ViewBag.Title = "Departmanlar";
                Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<div class="container-fluid">
    <h1 class="mt-4">Departmanlar</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Departman/Index">Departmanlar</a></li>
        <li class="breadcrumb-item active">Departmanlar</li>
    </ol>
    @if (TempData["DepartmanSuccess"] != null)
    {
<div class="alert alert-success alert-dismissible fade show" role="alert">
    @TempData["DepartmanSuccess"].ToString()
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>}
    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-table mr-1"></i>Departman Listesi</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Departman Adı</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var departman in Model)
                        {
            <tr>
                <td>@departman.Ad</td>
                <td>
                    <a href="/Departman/Detay/@departman.Id" class="btn btn-info">Detaylar</a>
                    <a href="/Departman/Duzenle/@departman.Id" class="btn btn-primary">Düzenle</a>
                    <a href="/Departman/Sil/@departman.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="form-group mt-4 mb-0"><a class="btn btn-primary" href="/Departman/Ekle">Yeni Departman Ekle</a></div>
</div>

