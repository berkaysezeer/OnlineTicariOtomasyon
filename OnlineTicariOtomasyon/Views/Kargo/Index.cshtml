@using OnlineTicariOtomasyon.Models
@model List<Kargo>
@{
    ViewBag.Title = "Kargolar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Kargolar</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Kargo/Index">Kargolar</a></li>
        <li class="breadcrumb-item active">Kargo Listesi</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-table mr-1"></i>Kargo Listesi</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="tblKargolar" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Takip Numarası</th>
                            <th>Durum</th>
                            <th>Ürün</th>
                            <th>Personel</th>
                            <th>Müşteri</th>
                            <th>Tarih</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var kargo in Model)
                        {
                            <tr>
                                <td>@kargo.TakipKodu</td>
                                <td>@kargo.KargoDurum.Durum</td>
                                <td>@kargo.SatisHareket.Urun.Ad</td>
                                <td>@kargo.SatisHareket.Personel.Ad @kargo.SatisHareket.Personel.Soyad</td>
                                <td>@kargo.SatisHareket.Cari.Ad @kargo.SatisHareket.Cari.Soyad</td>
                                <td>@kargo.Tarih.ToString("dd.MM.yyy HH:mm")</td>
                                <td>
                                    <a href="/Satis/Detay/@kargo.SatisHareketId" class="btn btn-outline-info">Detay</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @*<div class="form-group mt-4 mb-0"><a class="btn btn-primary" href="/Satis/Ekle">Yeni Satış Ekle</a></div>*@
</div>
<link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />

<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
<script>

    $('#tblKargolar').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
        }
    });

</script>