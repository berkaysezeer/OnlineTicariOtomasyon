@using OnlineTicariOtomasyon.Models
@model Cari
@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_CariPanelLayout.cshtml";
}

<div class="container-fluid mt-5">
    @using (Html.BeginForm("BilgiGuncelle", "CariPanel", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.Id)
        <div class="row">
            <div class="col-md-4">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(x => x.Ad)
                        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(x => x.Soyad)
                        @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(x => x.Sehir, "Şehir")
                        @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(x => x.Eposta, "E-posta")
                        @Html.TextBoxFor(x => x.Eposta, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit">Kaydet</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>